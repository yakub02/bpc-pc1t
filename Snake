#include <stdio.h>
#include <time.h>
#include <stdlib.h>
#include <conio.h>
#include<time.h>
#include<ctype.h>
#include <time.h>
#include <windows.h>
#include <process.h>

#define N 20
#define M 40

int i, j;
int field[N][M];
int x, y, Gy, head, tail;

void snakeinit()
{
	for (i = 0; i < N; i++)
	{
		for (j = 0; j < M; j++)
		{
			field[i][j] = 0;
		}
	}
	x = N / 2;
	y = M / 2;
	Gy = y;
	head = 5;
	tail = 1;

	for (i = 0; i < head; i++)
	{
		Gy++;
		field[x][Gy - head] = i + 1;
	}
}
void border()
{
	for (i = 0; i <= M + 1; i++)
	{
		printf("#");

	}
	printf("\n");
	for (i = 0; i <= N + 1; i++)
	{
		printf("#");
		for (j = 0; j < M + 1; j++)
		{
			if (field[i][j] == 0)
			{
				printf(" ");
			}
			if (field[i][j] > 0 && field[i][j] != head)
			{
				printf("0");
			}
			if (field[i][j] == head)
			{
				printf("X");
			}
			if (j == M)
			{
				printf("#\n");
			}
		}
	}
	for (i = 0; i <= M + 1; i++)
	{
		printf("#");
	}
}
void main()
{
	snakeinit();
	border();
}
